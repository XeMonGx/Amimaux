<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".presentation.ui.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projet"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ui.SupprimeAnimal"
            android:exported="false"
            android:label="@string/title_activity_supprime_animal"
            android:theme="@style/Theme.Projet" />
        <activity
            android:name=".presentation.ui.AjoutActivite"
            android:exported="false"
            android:label="@string/title_activity_ajout_activite"
            android:theme="@style/Theme.Projet" />
        <activity
            android:name=".presentation.ui.AnimalInfoActivity"
            android:exported="false"
            android:label="@string/title_activity_animal_info"
            android:theme="@style/Theme.Projet" />
        <activity
            android:name=".presentation.ui.AddAnimal"
            android:exported="false"
            android:label="@string/title_activity_ajout"
            android:theme="@style/Theme.Projet" />
        <activity
            android:name=".presentation.ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Projet">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>